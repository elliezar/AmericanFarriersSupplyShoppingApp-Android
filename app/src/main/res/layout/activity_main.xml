<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/colorBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo" android:id="@+id/imageView"
            android:layout_weight="3" android:scaleType="fitStart" android:padding="8dp" android:layout_margin="16dp"
            android:adjustViewBounds="true" android:cropToPadding="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText" android:layout_weight="1" android:hint="Enter Mobile Number"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:id="@+id/editText2" android:layout_weight="1" android:hint="Enter Password"/>
    <TextView
            android:text="LOGIN"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
            app:fontFamily="sans-serif" android:padding="8dp"/>

</LinearLayout>